{
  "_comment": "Block State Template - Multipart (Fence-style)",
  "_location": "assets/namespace/blockstates/example_fence.json",
  "_description": "Multipart block state that combines multiple models based on conditions (oak fence style)",
  
  "multipart": [
    {
      "apply": {
        "model": "namespace:block/example_fence_post"
      }
    },
    {
      "when": {
        "north": "true"
      },
      "apply": {
        "model": "namespace:block/example_fence_side",
        "uvlock": true
      }
    },
    {
      "when": {
        "east": "true"
      },
      "apply": {
        "model": "namespace:block/example_fence_side",
        "y": 90,
        "uvlock": true
      }
    },
    {
      "when": {
        "south": "true"
      },
      "apply": {
        "model": "namespace:block/example_fence_side",
        "y": 180,
        "uvlock": true
      }
    },
    {
      "when": {
        "west": "true"
      },
      "apply": {
        "model": "namespace:block/example_fence_side",
        "y": 270,
        "uvlock": true
      }
    }
  ]
}
